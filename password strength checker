<script>

function checkPassword(){
    const password = document.getElementById("password").value;
    const bar = document.getElementById("progress-bar");
    const text = document.getElementById("strength-text");

    let score = 0;

    if(password.length >= 8) score++;
    if(/[A-Z]/.test(password)) score++;
    if(/[0-9]/.test(password)) score++;
    if(/[^A-Za-z0-9]/.test(password)) score++;

    let percent = score * 25;
    bar.style.width = percent + "%";

    if(percent <= 25){
        bar.style.background = "#ff4e50";
        text.innerText = "Weak Password";
        text.style.color = "#ff4e50";
    }
    else if(percent <= 75){
        bar.style.background = "#f9d423";
        text.innerText = "Medium Password";
        text.style.color = "#f9d423";
    }
    else{
        bar.style.background = "#00ffcc";
        text.innerText = "Strong Password";
        text.style.color = "#00ffcc";
    }
}

</script>

